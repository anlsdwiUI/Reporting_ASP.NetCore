@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reporting App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 40px;
            background-color: #f5f5f5;
        }

        h1 {
            color: #333;
            margin-bottom: 30px;
        }

        .btn {
            display: inline-block;
            padding: 12px 25px;
            margin: 10px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            background-color: #4CAF50;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            text-align: center;
        }

            .btn:hover {
                background-color: #45a049;
            }

            .btn:active {
                background-color: #3e8e41;
            }
    </style>
</head>
<body>
    <h1>Reporting App</h1>

    <p>Silakan pilih opsi download atau preview:</p>

    <button class="btn" onclick="openLink('/Reporting/ViewHtml', true)">Preview HTML</button>
    <button class="btn" onclick="openLink('/Reporting/DownloadPdf', false)">Download PDF</button>
    <button class="btn" onclick="openLink('/Reporting/DownloadExcel', false)">Download Excel</button>

    <script>
        function openLink(url, openInNewTab) {
            if (openInNewTab) {
                window.open(url, '_blank');
            } else {
                window.location.href = url;
            }
        }
    </script>
</body>
</html>